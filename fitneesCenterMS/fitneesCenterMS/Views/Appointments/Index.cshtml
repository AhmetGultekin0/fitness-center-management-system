@model IEnumerable<fitneesCenterMS.Models.Appointment>

@{
    ViewData["Title"] = "Randevu Listesi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-6">📅 Randevu Takvimi</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> Yeni Randevu Al
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-3">Tarih & Saat</th>
                        <th>Üye</th>
                        <th>Eğitmen</th>
                        <th>Hizmet</th>
                        <th>Durum</th>
                        <th class="text-end pe-3">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-3 fw-bold">
                                @item.AppointmentDate.ToString("dd MMM yyyy HH:mm")
                            </td>
                            <td>
                                <span class="text-muted small">@Html.DisplayFor(modelItem => item.Member.UserName)</span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Trainer.FullName)
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    @Html.DisplayFor(modelItem => item.Service.Name)
                                </span>
                            </td>

                            <td>
                                @if (item.Status == "Onay Bekliyor")
                                {
                                    <span class="badge bg-warning text-dark">⏳ Onay Bekliyor</span>
                                }
                                else if (item.Status == "Onaylandı ✅")
                                {
                                    <span class="badge bg-success">✅ Onaylandı</span>
                                }
                                else if (item.Status == "Reddedildi ❌")
                                {
                                    <span class="badge bg-danger">❌ Reddedildi</span>
                                }
                                else
                                {
                                    <span>@item.Status</span>
                                }
                            </td>

                            <td class="text-end pe-3">
                                <div class="d-flex gap-2 justify-content-end align-items-center">

                                    @if (User.IsInRole("Admin") && item.Status == "Onay Bekliyor")
                                    {
                                        <form asp-action="Approve" asp-route-id="@item.Id" method="post">
                                            <button type="submit" class="btn btn-sm btn-success" title="Onayla">
                                                ✅
                                            </button>
                                        </form>
                                        <form asp-action="Reject" asp-route-id="@item.Id" method="post">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Reddet">
                                                ❌
                                            </button>
                                        </form>
                                        <div class="vr mx-1"></div>
     }

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                        📄 Detay
                                    </a>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">✏️</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">🗑️</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>