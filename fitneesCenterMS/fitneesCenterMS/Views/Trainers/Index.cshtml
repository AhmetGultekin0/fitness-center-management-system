@model IEnumerable<fitneesCenterMS.Models.Trainer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<div class="row">
@foreach (var item in Model) {
    <div class="col-md-4">
        <div class="card mb-4">
            @if (!string.IsNullOrEmpty(item.ImageUrl))
            {
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.FullName" />
            }
            <div class="card-body">
                <h5 class="card-title">@item.FullName</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.Specialization</h6>

                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
</div>
